{
  "name": "use-form-persist",
  "version": "1.0.0",
  "description": "A React hook for automatically persisting and restoring form state to/from localStorage",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "directories": {
    "src": "src",
    "test": "tests",
    "example": "examples"
  },
  "scripts": {
    "build": "rollup -c",
    "build:watch": "rollup -c -w",
    "dev": "rollup -c -w",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src tests --ext .ts,.tsx",
    "lint:fix": "eslint src tests --ext .ts,.tsx --fix",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run build && npm test -- --testPathPattern=\"simple\" && npm run typecheck",
    "size": "bundlesize",
    "prepare": "husky",
    "format": "prettier --write \"src/**/*.{ts,tsx}\" \"tests/**/*.{ts,tsx}\"",
    "check-format": "prettier --check \"src/**/*.{ts,tsx}\" \"tests/**/*.{ts,tsx}\"",
    "validate": "npm run typecheck && npm run lint && npm run test",
    "clean": "rm -rf dist coverage"
  },
  "keywords": [
    "react",
    "hook",
    "form",
    "persist",
    "localStorage",
    "state",
    "typescript"
  ],
  "author": "Sahil Nalavade",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sahilnalavade/use-form-persist.git"
  },
  "bugs": {
    "url": "https://github.com/sahilnalavade/use-form-persist/issues"
  },
  "homepage": "https://github.com/sahilnalavade/use-form-persist#readme",
  "peerDependencies": {
    "react": ">=16.8.0"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^28.0.6",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@rollup/plugin-typescript": "^12.1.4",
    "@testing-library/jest-dom": "^6.6.4",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.1.0",
    "@types/react": "^19.1.9",
    "@typescript-eslint/eslint-plugin": "^8.38.0",
    "@typescript-eslint/parser": "^8.38.0",
    "bundlesize": "^0.18.2",
    "eslint": "^9.32.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.3",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lint-staged": "^16.1.2",
    "prettier": "^3.6.2",
    "rollup": "^2.79.2",
    "rollup-plugin-peer-deps-external": "^2.2.4",
    "rollup-plugin-terser": "^7.0.2",
    "ts-jest": "^29.4.0",
    "tslib": "^2.8.1",
    "typescript": "^5.8.3"
  },
  "bundlesize": [
    {
      "path": "./dist/index.js",
      "maxSize": "5kb"
    }
  ],
  "engines": {
    "node": ">=12"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
